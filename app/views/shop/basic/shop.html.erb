<section class="shop_basic">
  <nav class="nav nav_shop_basic">
    <%= render 'companies/themes/basic/partials/nav' %>
  </nav>

  <%= render 'layouts/partials/flash' %>
  
  <div class="shop_main_basic">
    <div class="shop_main_search_basic">
      <div class="">
        <div class="input-group">
          <input type="text" class="form-control" placeholder="Buscar camisetas">
        </div>
      </div>
      <div class="">.
        <p>Categorias</p>
        <ul class="list-group">
          <% if @categories.present? %>
            <% @categories.each do |x| %>
              <li class="list-group-item"><%= x.name %></li>
            <% end %>
          <% else %>
            <% 5.times do %>
              <li class="list-group-item">Nombre de categoria</li>
            <% end %>
          <% end %>
        </ul>
      </div>
      <% if is_company? %>
        <div class="">
          <%= link_to 'Nueva Categoria', new_company_category_path(@company), class:'btn btn-dark', remote: true %><br>
          <%= link_to 'Nueva Producto', new_company_product_path(@company), class:'btn btn-dark', remote: true %><br>
        </div>
      <% end %>
    </div>

    <div class="shop_main_content_basic">
      <div class="shop_main_content_slider_basic">
        <%= render 'shop/basic/slider' %>
      </div>
      <div class="shop_main_content_products_basic">
        <% if @products.present? %>
          <% @products.each do |x| %>
            <div class="shop_main_content_products_box_basic">
              <div class="shop_main_content_products_box_img_basic">
                <% if x.image.exists? %>
                  <%= image_tag x.image.url(:thumb) %>
                <% end %>
              </div>
              <div class="shop_main_content_products_box_info_basic">
                <p class="product_name_basic"><%= x.name %></p>
                <span class="product_description_basic"><%= x.description %></span>
                <span class="product_price_basic">$<%= x.price %></span>
              </div>
              <div class="shop_main_content_products_box_buttoms_basic">
                <%= link_to 'Detalles', root_path, class:'product_buttom_basic' %>
              </div>
              <% if is_company? %>
                <%= link_to 'Editar', edit_company_product_path(@company,x), remote: true %>
                <%= link_to 'Eliminar', company_product_path(@company, x), method: :delete  %>
              <% end %>          
            </div>
          <% end %>
        <% else %>
          <% 6.times do %>
            <div class="shop_main_content_products_box_basic">
              <div class="shop_main_content_products_box_img_basic">
                <img src="https://s3.amazonaws.com/makeitreal/projects/e-commerce/camiseta-1.jpg">
              </div>
              <div class="shop_main_content_products_box_info_basic">
                <p class="product_name_basic">Rocker Style</p>
                <span class="product_description_basic">Perfecta para salidas</span>
                <span class="product_price_basic">$25.000</span>
              </div>
              <div class="shop_main_content_products_box_buttoms_basic">
                <%= link_to 'Detalles', root_path, class:'product_buttom_basic' %>
              </div>          
            </div>
          <% end %>
        <% end %>
      </div>      
    </div>
  </div>
</section>
